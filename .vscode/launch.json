{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "lldb",
            "request": "launch",
            "name": "Launch (Linux)",
            "cargo": {
                "args": [
                    "build"
                ],
                "filter": {
                    "name": "light_field_vr_viewer",
                    "kind": "bin"
                }
            },
            "linux": {
                "env": {
                    "RUST_BACKTRACE": "1"
                }
            },
            "args": [],
            "cwd": "${workspaceRoot}"
        },
        {
            "type": "cppvsdbg",
            "request": "launch",
            "name": "Launch (Windows)",
            "program": "${workspaceRoot}/target/debug/light_field_vr_viewer.exe",
            "stopAtEntry": false,
            "cwd": "${workspaceRoot}",
            "environment": [],
            "externalConsole": true
        }
    ]
}